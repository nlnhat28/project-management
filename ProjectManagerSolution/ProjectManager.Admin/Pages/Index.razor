@page "/"
@inherits IndexBase

@if (@isLoading)
{
    <TemplatedLoading />
}
<div class="box-form">
    <div class="search-form">
        <h3 class="box-title margin-bottom-20">Quản lý đồ án</h3>
        <div class="row">
            <div class="col-sm-3">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@totalStudent</h3>
                        <p>Tổng số sinh viên</p>
                    </div>
                    <a href="/Student/Index" class="small-box-footer">Xem</a>
                </div>
            </div>
            <div class="col-sm-3 padding-left-0">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@totalClass</h3>
                        <p>Tổng số lớp</p>
                    </div>
                    <a href="/Classs/Index" class="small-box-footer">Xem</a>
                </div>
            </div>
            <div class="col-sm-3 padding-left-0">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@totalDepartment</h3>
                        <p>Tổng số khoa</p>
                    </div>
                    <a href="/Department/Index" class="small-box-footer">Xem</a>
                </div>
            </div>
            <div class="col-sm-3 padding-left-0">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@totalSpecialized</h3>
                        <p>Tổng số chuyên ngành</p>
                    </div>
                    <a href="/Specialized/Index" class="small-box-footer">Xem</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>@totalTeacher</h3>
                        <p>Tổng số giáo viên</p>
                    </div>
                    <a href="/Teacher/Index" class="small-box-footer">Xem</a>
                </div>
            </div>
            <div class="col-sm-3 padding-left-0">
                <div class="small-box bg-lime">
                    <div class="inner">
                        <h3>@totalProjectList</h3>
                        <p>Tổng số đồ án</p>
                    </div>
                    <a href="/ProjectList/Index" class="small-box-footer">Xem</a>
                </div>
            </div>
            <div class="col-sm-3 padding-left-0">
                <div class="small-box bg-orange">
                    <div class="inner">
                        <h3>@totalSuccess</h3>
                        <p>Tổng số sinh viên đạt</p>
                    </div>
                    <a style="cursor:pointer;" @onclick="@(() => HandleClick("/ProjectList/Index", (long)StatusEnum.Pass))" class="small-box-footer">Xem</a>
                </div>
            </div>
            <div class="col-sm-3 padding-left-0">
                <div class="small-box bg-pink">
                    <div class="inner">
                        <h3>@totalFail</h3>
                        <p>Tổng số sinh viên chưa đạt</p>
                    </div>
                    <a style="cursor:pointer;" @onclick="@(() => HandleClick("/ProjectList/Index", (long)StatusEnum.Fail))" class="small-box-footer">Xem</a>
                </div>
            </div>
        </div>
    </div>
</div>

